{
  "compilerOptions": {
    "jsx": "react",
    "types": [
      "@testing-library/jest-dom",
      "node"
    ],
    "esModuleInterop": true,
    "rootDir": ".",
    "baseUrl": "src",
    "paths": {
      "@components/*": [
        "./components/*"
      ],
      "@pages/*": [
        "./pages/*"
      ],
      "@store/*": [
        "./store/*"
      ],
      "@utils/*": [
        "./utils/*"
      ]
    }
  },
  "files": [],
  "references": [
    {
      "path": "./tsconfig.app.json"
    },
    {
      "path": "./tsconfig.node.json"
    }
  ],
  "exclude": [
    "node_modules"
  ],
}